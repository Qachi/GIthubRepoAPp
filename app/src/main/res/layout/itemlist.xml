<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:contentDescription="@string/user_image"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:src="@drawable/glide_placeholder"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"/>

    <TextView
        app:layout_constraintTop_toTopOf="@id/avatar"
        app:layout_constraintLeft_toRightOf="@id/avatar"
        app:layout_constraintRight_toRightOf="parent"
        android:id="@+id/repository"
        android:layout_marginStart="20dp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="#000"
        android:textSize="19sp"
        tools:text="architecture-samples" />

    <TextView
        app:layout_constraintTop_toBottomOf="@id/repository"
        android:id="@+id/author"
        app:layout_constraintLeft_toLeftOf="@id/repository"
        android:layout_width="0dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="10dp"
        android:textSize="18sp" />

    <TextView
        android:gravity="center_vertical"
        android:drawablePadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/author"
        app:layout_constraintLeft_toLeftOf="@id/author"
        android:id="@+id/star"
        android:drawableStart="@android:drawable/star_big_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textSize="15sp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>



